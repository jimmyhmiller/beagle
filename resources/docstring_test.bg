namespace docstring_test

/// This is a test function that adds two numbers.
/// It demonstrates multi-line docstrings.
fn add(x, y) {
    x + y
}

/// A simple struct for testing.
struct Point {
    /// The x coordinate
    x
    /// The y coordinate
    y
}

/// Another function for apropos testing
fn add_three(a, b, c) {
    a + b + c
}

fn no_doc_function() {
    42
}

fn main() {
    // Test fn-doc
    let doc = fn-doc(add)
    println(doc)

    // Test fn-doc on function with no docstring
    let no_doc = fn-doc(no_doc_function)
    println(no_doc == null)

    // Test namespace-members
    let members = namespace-members("docstring_test")
    // Sort for deterministic output
    let sorted = sort(members)
    println(sorted)

    // Test all-namespaces returns something (just check length > 0)
    let namespaces = all-namespaces()
    println(length(namespaces) > 0)

    // Test apropos - just verify it returns results
    let matches = apropos("add_three")
    // Just print the count since filtering has protocol issues with closures
    println(length(matches) >= 1)

    "done"
}

// Expect
// This is a test function that adds two numbers.
// It demonstrates multi-line docstrings.
// true
// ["add", "add_three", "no_doc_function", "main"]
// true
// true
