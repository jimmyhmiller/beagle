    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'main'",
            "cargo": {
                "args": [
                    "build",
                    // "--release",
                    // "--profile=release-with-debug",
                    "--bin=main",
                    "--package=main",
                    "--features=simple-mark-and-sweep,thread-safe"
                ],
                "filter": {
                    "name": "main",
                    "kind": "bin"
                }
            },
            "args": ["resources/import_test.bg"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'main'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=main",
                    "--package=main"
                ],
                "filter": {
                    "name": "main",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}